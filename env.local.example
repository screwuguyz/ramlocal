# Örnek .env.local

# Next.js client (Supabase Realtime için gerekli)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Cookie tabanlı admin giriş (app/api/login)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin
# ⚠️ ÖNEMLİ: Production'da mutlaka güçlü bir şifre kullanın!

# Arşiv sayfası şifresi (client-side, NEXT_PUBLIC_ prefix gerekli)
NEXT_PUBLIC_ARCHIVE_PASSWORD=ram2025
# ⚠️ ÖNEMLİ: Bu şifre client-side'da görünür olacak, hassas bilgiler için kullanmayın!

# Pushover bildirimleri (app/api/notify)
# Bu bir Application API Token/Key olmalı (User Key DEĞİL)
PUSHOVER_TOKEN=

# Opsiyonel: Eğer /api/notify yerine harici bir URL proxy kullanacaksanız
# NEXT_PUBLIC_NOTIFY_URL=https://your-deployment.vercel.app

# OpenAI entegrasyonu (app/api/explain)
OPENAI_API_KEY=
# Opsiyonel: Model adı (varsayılan: gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# Geri bildirim e-postası (app/api/feedback)
# SMTP sunucusu bilgileri (ör: Gmail için uygulama şifresi ile)
SMTP_HOST=
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=
# Gönderici adresi (genellikle SMTP_USER ile aynı)
SMTP_FROM=
# Alıcı adresi (varsayılan: ataafurkan@gmail.com)
FEEDBACK_TO_EMAIL=ataafurkan@gmail.com

# ============================================
# RAM Dosya Atama - Environment Variables
# ============================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
JWT_SECRET=your_jwt_secret

# Cron Jobs
CRON_SECRET=your_cron_secret

# Feature Flags (Gradual Rollout System)
# Set to "true" to enable, "false" or omit to disable

# Week 1: Separate Queue System
NEXT_PUBLIC_USE_SEPARATE_QUEUE=false

# Week 2: Versioning System
NEXT_PUBLIC_USE_VERSIONING=false

# Week 3: Improved Sync Mechanism
NEXT_PUBLIC_USE_IMPROVED_SYNC=false

# Week 4+: Teachers Table Migration
NEXT_PUBLIC_USE_TEACHERS_TABLE=false

# Week 5+: Cases Table Migration
NEXT_PUBLIC_USE_CASES_TABLE=false

# Week 6+: History Table Migration
NEXT_PUBLIC_USE_HISTORY_TABLE=false

# Queue System (Optional)
NEXT_PUBLIC_QUEUE_ENABLED=0

# Debug Mode
NEXT_PUBLIC_DEBUG_SYNC=false
